---
interface Props {
  title: string;
  description: string;
  tags: string[];
  link?: string;
  slug?: string;
}

const { title, description, tags, link, slug } = Astro.props;
const href = slug ? `/projects/${slug}` : link || '#';
---

<article class="project-card">
  <div class="card-content">
    <h3 class="card-title">
      <a href={href}>
        {title}
      </a>
    </h3>
    <p class="card-description">{description}</p>
    <div class="tags">
      {tags.map(tag => (
        <span class="tag">{tag}</span>
      ))}
    </div>
    <div class="card-footer">
        <a href={href} class="link-arrow">
            View Project 
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
        </a>
    </div>
  </div>
</article>

<style>
  .project-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-normal);
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .project-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-primary);
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
  }

  .card-content {
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .card-title {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-xs);
  }

  .card-title a::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .card-description {
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
    flex-grow: 1;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: var(--spacing-md);
  }

  .tag {
    background: rgba(61, 220, 132, 0.1);
    color: var(--color-primary);
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    font-family: var(--font-sans);
    font-weight: 500;
  }

  .card-footer {
    display: flex;
    align-items: center;
    position: relative;
    z-index: 2; /* Bring link above full card link */
  }
  
  .link-arrow {
      color: var(--color-primary);
      font-weight: 600;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
  }
  
  .link-arrow:hover {
      text-decoration: underline;
  }

</style>
