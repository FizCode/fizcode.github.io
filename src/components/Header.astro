---
const navItems = [
  { href: '#home', label: 'Home' },
  { href: '#about', label: 'About' },
  { href: '#projects', label: 'Projects' },
  { href: '#contact', label: 'Contact' },
];
---

<header class="header">
  <div class="container header-container">
    <a href="/" class="logo">
      <span class="text-primary">&lt;</span>FizCode<span class="text-primary">/&gt;</span>
    </a>
    
    <nav class="nav">
      <ul class="nav-list">
        {navItems.map(item => (
          <li>
            <a href={item.href} class="nav-link">{item.label}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background-color: rgba(11, 14, 20, 0.8);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    padding: var(--spacing-sm) 0;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.5rem;
    color: var(--color-text-main);
  }

  .nav-list {
    display: flex;
    list-style: none;
    gap: var(--spacing-md);
  }

  .nav-link {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-text-muted);
  }

  .nav-link:hover {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .nav-list {
      display: none; /* Todo: Mobile Menu */
    }
  }
</style>
